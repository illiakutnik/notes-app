{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["plugin:react/recommended", "airbnb", "prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": "error",
		// "react/prop-types": [0],
		"no-shadow": [0]
	}
}
